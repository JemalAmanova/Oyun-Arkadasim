@model List<Oyunlarim>

   
<h1>Oyunlarım</h1>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Kullanıcı Id</th>
            <th>Oyun Id</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var oyunlarim in Model)
        {
            <tr>
                <td>@oyunlarim.Id</td>
                <td>@oyunlarim.UserId</td>
                <td>@oyunlarim.Oyun.OyunAdi</td>
                <td>
                    <div class="btn-group" role="group">
                        <form asp-controller="Oyunlarim" asp-action="EkleGuncelle" asp-route-id="@oyunlarim.Id" method="get" class="mr-1">
                            <button type="submit" class="btn btn-primary">Güncelle</button>
                        </form>
                        <form asp-controller="Oyunlarim" asp-action="Sil" asp-route-id="@oyunlarim.Id" method="post">
                            <button type="submit" class="btn btn-primary" style="background-color: red; border-color: red;">Sil</button>
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
